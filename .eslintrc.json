{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "amd": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "globals": {
    "__webpack_public_path__": true,
    "var2": false
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "useTabs": false
      }
    ],
    "varsIgnorePattern": "[__webpack_public_path__,process]",
    "indent": ["off", "tab"],
    "ignoreRestSiblings": true,
    "linebreak-style": ["off"],
    "semi": ["warn", "always"],
    "no-set-state": "off",
    "no-unused-vars": [
      "error",
      {
        "ignoreRestSiblings": true
      }
    ],
    "no-console": ["off"],
    "optionalChaining": true,
    "no-debugger": "warn"
  }
}
